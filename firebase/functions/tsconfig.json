{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "esModuleInterop": true,
    "allowJs": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "skipLibCheck": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false
  },
  "compileOnSave": true,
  "include": [
    "src",
    "types/**/*"
  ]
}
